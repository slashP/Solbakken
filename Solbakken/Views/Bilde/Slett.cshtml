@model IEnumerable<Solbakken.Models.Bilde>

@{
    ViewBag.Title = "Slett bilder";
}

<h2>Slett bilder</h2>

<table>
    <tr>
        <th></th>
        <th>
            Album
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Filnavn)
        </th>
        <th></th>
    </tr>

@foreach (var bilde in Model)
{
    <tr>
        <td>
            <img src="/Home/GetThumbnail?id=@(bilde.Id)" alt="@bilde.Beskrivelse" title="@bilde.Beskrivelse" style="vertical-align: middle; horiz-align: center; height: 50px;"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => bilde.Album.Navn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => bilde.Filnavn)
        </td>
        <td>
            @Html.ActionLink("Slett", "SlettBekreftet", new { id = bilde.Id })
        </td>
    </tr>
}
</table>
