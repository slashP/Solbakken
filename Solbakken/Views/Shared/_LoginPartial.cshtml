@if (Request.IsAuthenticated) {
    <p>
        Hei, @Html.ActionLink(User.Identity.Name, "ChangePassword", "Account", null, new { @class = "username", title = "Change password" })!
        @Html.ActionLink("Logg av", "LogOff", "Account")
    </p>
} else {
    <ul>
        <li>@Html.ActionLink("Registrer deg", "Register", "Account")</li>
        <li>@Html.ActionLink("Logg inn", "LogOn", "Account")</li>
    </ul>
}